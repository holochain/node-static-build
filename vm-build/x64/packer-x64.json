{
  "variables": {
    "user": "node-static-build",
    "password": "node-static-build",
    "disk_size": "10000",
    "hostname": "node-static-build-x64",
    "domain": "node-static-build-x64"
  },
  "builders":
  [
    {
      "name": "node-static-build-x64",
      "vm_name": "node-static-build-x64.qcow2",
      "headless": true,
      "type": "qemu",
      "qemu_binary": "qemu-system-x86_64",
      "qemuargs": [[ "-m", "4096M" ],[ "-smp", "4" ]],
      "format": "qcow2",
      "accelerator": "kvm",
      "net_device": "virtio-net",
      "disk_cache": "none",
      "disk_interface": "ide",
      "disk_size": "{{ user `disk_size`}}",
      "iso_url": "file://./packer_cache/debian-8.11.1-amd64-netinst.iso",
      "iso_checksum": "ea444d6f8ac95fd51d2aedb8015c57410d1ad19b494cedec6914c17fda02733c",
      "iso_checksum_type": "sha256",
      "http_directory": ".",
      "boot_wait": "5s",
      "boot_key_interval": "20ms",
      "boot_command": [
        "<esc><wait><wait>",
        "install auto <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg <wait>",
        "debian-installer=en_US locale=en_US.UTF-8 keymap=us <wait>",
        "netcfg/get_hostname={{ user `hostname` }} <wait>",
        "netcfg/get_domain={{ user `domain`}} <wait>",
        "fb=false debconf/frontend=noninteractive <wait>",
        "passwd/user-fullname={{user `user`}} <wait>",
        "passwd/user-password={{user `password`}} <wait>",
        "passwd/user-password-again={{user `password`}} <wait>",
        "passwd/username={{user `user`}} <wait>",
        "<enter><wait>"
      ],
      "ssh_username": "{{user `user`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "50m",
      "shutdown_command": "echo '{{user `password`}}'|sudo -S shutdown -h now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "_build-x64.bash"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "shell-local",
      "inline": [
        "OUT_DIR=output-node-static-build-x64",
        "VM_NAME=$OUT_DIR/node-static-build-x64.qcow2",
        "VM_NAME_OLD=$VM_NAME.old.qcow2",
        "mv $VM_NAME $VM_NAME_OLD",
        "qemu-img convert -c -O qcow2 $VM_NAME_OLD $VM_NAME",
        "rm -f $VM_NAME_OLD"
      ]
    }
  ]
}
